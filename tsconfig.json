{
  "compilerOptions": {
    "module": "commonjs",

    "target": "es2019",
    "jsx": "react-jsx",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",

    "baseUrl": "./",
    "paths": {
      // "@utils/*": ["./src/utils/*"],
      // "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
