{
  "name": "need4deed-sdk",
  "version": "0.0.10",
  "description": "Need4Deed.org SDK",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles/*": "./dist/styles/*",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build:copy-assets": "mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "build:tsc": "tsc",
    "build": "yarn build:tsc && yarn build:copy-assets",
    "watch": "tsc --watch --project tsconfig.cjs.json",
    "prepublishOnly": "yarn build",
    "publish": "yarn publish",
    "publish:npm": "yarn publish --access public"
  },
  "keywords": [
    "sdk",
    "react",
    "typescript",
    "api-hooks",
    "ui-components",
    "layouts",
    "styling",
    "utilities"
  ],
  "author": "Need4Deed.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/need4deed-org/sdk.git"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}
